<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/hours_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="200dp"
        android:padding="10dp"
        android:text="@string/zero"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/minutes_tv"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:text="@string/zero"
        app:layout_constraintBottom_toBottomOf="@+id/hours_tv"
        app:layout_constraintStart_toEndOf="@+id/hours_tv"
        app:layout_constraintTop_toTopOf="@+id/hours_tv"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/seconds_tv"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:text="@string/zero"
        app:layout_constraintBottom_toBottomOf="@+id/minutes_tv"
        app:layout_constraintStart_toEndOf="@+id/minutes_tv"
        app:layout_constraintTop_toTopOf="@+id/minutes_tv"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/mili_seconds_tv"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="115dp"
        android:padding="10dp"
        android:text="@string/zero"
        app:layout_constraintBottom_toBottomOf="@+id/seconds_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seconds_tv"
        app:layout_constraintTop_toTopOf="@+id/seconds_tv" />

    <Button
        android:id="@+id/start_stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:text="@string/start"
        android:textColor="#09EC15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hours_tv" />

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        android:text="@string/reset"
        app:layout_constraintBottom_toBottomOf="@+id/start_stop_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/start_stop_btn"
        app:layout_constraintTop_toTopOf="@+id/start_stop_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>